!!! 5
%html(lang="en")
  %head
    %meta(charset="utf-8")
    %meta(http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1")
    %meta(name="viewport" content="width=device-width, initial-scale=1.0")
    %title= content_for?(:title) ? yield(:title) : "Puntos Point"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "//cdnjs.cloudflare.com/ajax/libs/html5shiv/3.6.1/html5shiv.js"
    = stylesheet_link_tag "puntos_point/application", :media => "all"
    %link(href="images/apple-touch-icon-144x144.png" rel="apple-touch-icon-precomposed" sizes="144x144")
    %link(href="images/apple-touch-icon-114x114.png" rel="apple-touch-icon-precomposed" sizes="114x114")
    %link(href="images/apple-touch-icon-72x72.png" rel="apple-touch-icon-precomposed" sizes="72x72")
    %link(href="images/apple-touch-icon.png" rel="apple-touch-icon-precomposed")

    =# favicon_link_tag

  %body
    #container
      / Header
      %header.backgroundHeader
        #headerContainer.container
          .navbar
            .container
              #logo
                = link_to puntos_point_root_path do
                  = image_tag 'logo.png', alt: 'Puntos Point', title: 'Puntos Point'
              .pull-right
                %ul.nav.navBg
                  - if current_admin
                    %li
                      = link_to destroy_admin_session_path do
                        %i.icon-off.icon-white
                        = t('helpers.sign_out')

    .container.contenidoPP
      .row
        .span9
          = bootstrap_flash
          = yield
        .span3
          .well.sidebar-nav
            %h3= t('menu.puntospoint.title')
            %ul.nav.nav-list
              %li
                = link_to puntos_point_categories_path do
                  %i.icon-user.icon-white
                  = Category.model_name.human.pluralize
              %li
                = link_to puntos_point_interests_path do
                  %i.icon-user.icon-white
                  = Interest.model_name.human.pluralize
              %li
                = link_to puntos_point_industries_path do
                  %i.icon-user.icon-white
                  = Industry.model_name.human.pluralize
              %li
                = link_to puntos_point_efis_path do
                  %i.icon-user.icon-white
                  = Efi.model_name.human.pluralize
              %li
                = link_to puntos_point_admins_path do
                  %i.icon-user.icon-white
                  = Admin.model_name.human.pluralize
              %li
                = link_to puntos_point_user_efis_path do
                  %i.icon-user.icon-white
                  = UserEfi.model_name.human.pluralize
              %li
                = link_to puntos_point_small_ecos_path do
                  %i.icon-user.icon-white
                  = t('menu.puntospoint.small_ecos')
              %li
                = link_to puntos_point_big_ecos_path do
                  %i.icon-user.icon-white
                  = t('menu.puntospoint.big_ecos')
              %li
                = link_to puntos_point_experiences_path do
                  %i.icon-user.icon-white
                  = Experience.model_name.human.pluralize
              %li
                = link_to puntos_point_user_ecos_path do
                  %i.icon-user.icon-white
                  = UserEco.model_name.human.pluralize
              %li
                = link_to puntos_point_events_path do
                  %i.icon-user.icon-white
                  = Event.model_name.human.pluralize
      .cb
      %br

    / %footer#footer.backgroundFooter
    /   #footerContainer.container
    /     .row-fluid

    /
      Javascripts
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "puntos_point/application"
