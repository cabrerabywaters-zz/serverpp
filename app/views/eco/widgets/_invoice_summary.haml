- experiences.each do |e|
  .row.invoice-row
    .span5
      .value.text-value.left
        = e[:experience]
    .span2
      .value.right
        = number_to_currency e[:income]
    .span1
      .value.text-value.center
        = "#{number_to_currency(e[:charge])} (#{e[:fee]}%)"
    .span2
      .value.right
        = number_to_currency e[:to_pay]

.row.action-row
  .span5.offset5
