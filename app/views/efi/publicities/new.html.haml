- model_class = Publicity
.page-header
  %h1= t('helpers.titles.male.new', :model => model_class.model_name.human.titleize)

= simple_form_for [:efi, @publicity], html: {class: 'form-horizontal' } do |f|

  = f.association :event, collection: @events, include_blank: false
  = f.input :image

  .form-actions
    = f.button :submit, class: 'btn-warning pull-right ml-10'

    - if can? :read, Publicity
      = link_to t("helpers.links.cancel"), efi_publicities_path, class: 'btn btn-inverse pull-right'

