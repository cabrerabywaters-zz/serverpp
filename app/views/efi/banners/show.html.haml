- model_class = Banner
.page-header
  %h1= model_class.model_name.human

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:event) + ':'
  %dd= @banner.event
  %dt= model_class.human_attribute_name(:published) + ':'
  %dd= booleanize @banner.published
  %dt= model_class.human_attribute_name(:image) + ':'
  %dd= image_tag @banner.image.url

.form-actions
  - if can? :destroy, @banner
    = link_to t("helpers.links.destroy"), efi_banner_path(@banner), method: :delete, data: {confirm: t("helpers.links.confirm.destroy")}, class: 'btn btn-danger pull-right ml-10'
  - if can? :update, @banner
    = link_to t("helpers.links.edit"), edit_efi_banner_path(@banner), class: 'btn btn-warning pull-right ml-10'
  - if can? :read, model_class
    = link_to t("helpers.links.back"), efi_banners_path, class: 'btn btn-inverse pull-right'
