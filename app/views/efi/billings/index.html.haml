.row
  .span12.panel.filters.tabbable
    %ul#experience-filter.nav.nav-pills
      %li.filter
        = link_to '#billed', data: { toogle: 'pill' } do
          %span.title Por Pagar
      %li.filter
        = link_to '#to_bill', data: { toogle: 'pill' } do
          %span.title Por Facturar
      %li.filter.active
        = link_to '#paid', data: { toogle: 'pill' } do
          %span.title Pagado

.tab-content{ style: "overflow: visible" }
  #billed.tab-pane
    = render 'billed'

  #to_bill.tab-pane
    = render 'to_bill'

  #paid.tab-pane.active
    = render 'paid'