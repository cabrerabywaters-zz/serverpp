.page-header
  %h1.text-center
    
    = image_tag 'logo_grande.png'
%p
  %icon.icon-user
  = t('helpers.subtitles.sign_in')


= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
  .fieldset
    = f.input :email, :autofocus => true, placeholder: resource.class.human_attribute_name(:email), label: false, input_html: {class: 'input-xlarge'}
  .fieldset
    = f.input_field :password, placeholder: resource.class.human_attribute_name(:password), class: 'input-xlarge'

  = f.button :submit, t('helpers.links.sign_in'), class: 'btn btn-success'

  - if devise_mapping.rememberable?
    = f.input :remember_me, wrapper: :inline_checkbox, as: :boolean

  = link_to t('helpers.links.forgot_password'), new_password_path(resource_name)


