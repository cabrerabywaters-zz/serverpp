- model_class = Category
.page-header
  %h1= model_class.model_name.human

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= @category.name
  %dt= model_class.human_attribute_name(:texture_name) + ':'
  %dd= @category.texture_name
  %dt= model_class.human_attribute_name(:icon) + ':'
  %dd= image_tag @category.icon

.form-actions
  - if can? :destroy, @category
    = link_to t("helpers.links.destroy"), puntos_point_category_path(@category), method: :delete, data: {confirm: t("helpers.links.confirm.destroy")}, class: 'btn btn-danger pull-right ml-10'
  - if can? :update, @category
    = link_to t("helpers.links.edit"), edit_puntos_point_category_path(@category), class: 'btn btn-warning pull-right ml-10'
  - if can? :read, model_class
    = link_to t("helpers.links.back"), puntos_point_categories_path, class: 'btn btn-inverse pull-right '

