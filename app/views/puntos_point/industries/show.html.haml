- model_class = Industry
.page-header
  %h1= model_class.model_name.human

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:name) + ':'
  %dd= @industry.name
  %dt= model_class.human_attribute_name(:percentage) + ':'
  %dd= number_to_percentage @industry.percentage, precision: 1

.form-actions
  - if can? :destroy, @industry
    = link_to t("helpers.links.destroy"), puntos_point_industry_path(@industry), method: :delete, data: {confirm: t("helpers.links.confirm.destroy")}, class: 'btn btn-danger pull-right ml-10'
  - if can? :update, @industry
    = link_to t("helpers.links.edit"), edit_puntos_point_industry_path(@industry), class: 'btn btn-warning pull-right ml-10'
  - if can? :read, model_class
    = link_to t("helpers.links.back"), puntos_point_industries_path, class: 'btn pull-right btn-inverse'

