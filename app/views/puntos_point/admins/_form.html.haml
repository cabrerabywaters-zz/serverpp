= simple_form_for [:puntos_point, @admin], html: {class: 'form-horizontal' } do |f|
  = f.input :rut
  = f.input :names
  = f.input :first_lastname
  = f.input :second_lastname
  = f.input :nickname
  = f.input :email
  = f.input :password
  = f.input :password_confirmation
  .form-actions
    = f.button :submit, class: 'btn-warning pull-right ml-10'
    - if can? :read, Admin
      = link_to t("helpers.links.cancel"), puntos_point_admins_path, class: 'btn btn-inverse pull-right'
