- model_class = Admin
.page-header
  %h1= model_class.model_name.human

%dl.dl-horizontal
  %dt= model_class.human_attribute_name(:rut) + ':'
  %dd= Run.format @admin.rut
  %dt= model_class.human_attribute_name(:full_name) + ':'
  %dd= @admin.full_name
  %dt= model_class.human_attribute_name(:nickname) + ':'
  %dd= @admin.nickname
  %dt= model_class.human_attribute_name(:email) + ':'
  %dd= @admin.email


.form-actions
  - if can? :destroy, @admin
    = link_to t("helpers.links.destroy"), puntos_point_admin_path(@admin), method: :delete, data: {confirm: t("helpers.links.confirm.destroy")}, class: 'btn btn-danger pull-right ml-10'
  - if can? :update, @admin
    = link_to t("helpers.links.edit"), edit_puntos_point_admin_path(@admin), class: 'btn btn-warning pull-right ml-10'
  - if can? :read, model_class
    = link_to t("helpers.links.back"), puntos_point_admins_path, class: 'btn btn-inverse pull-right'
